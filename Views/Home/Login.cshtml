<!DOCTYPE html>
<html lang="en" ng-app="loginApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stylish Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.14.3/ui-bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.14.3/ui-bootstrap-tpls.min.js"></script>
    <script src="~/MyApp/LogINScript.js"></script>
    <style>
        /* Custom CSS for styling */
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 100px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            padding: 20px 0;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #555;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            width: 100%;
            padding: 10px;
            border-radius: 3px;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #0056b3;
            }

        .alert {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div ng-controller="loginController" class="container">
        <div class="col-md-6 offset-md-3">
            <h1>Login</h1>
            <form ng-submit="submitLogin()" class="form-horizontal">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" ng-model="loginModel.username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" ng-model="loginModel.password" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <div ng-show="loginStatus" class="alert alert-info">{{ loginStatus }}</div>
        </div>
    </div>
</body>
</html>
